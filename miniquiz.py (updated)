# Mini Quiz


import random

score = 0

# Question 1
question = "What is 5 * 6?"
correct = "30"
options = ["11", "50", "60", correct]
random.shuffle(options)
print(question)
for i, option in enumerate(options, 1):
    print(f"{i}) {option}")
answer = int(input("Choose the correct option number: "))
if options[answer-1] == correct:
    print("CORRECT")
    score += 1
else:
    print("INCORRECT")

# Question 2
question = "What is 12 / 4?"
correct = "3"
options = ["2", "4", "6", correct]
random.shuffle(options)
print("\n" + question)
for i, option in enumerate(options, 1):
    print(f"{i}) {option}")
answer = int(input("Choose the correct option number: "))
if options[answer-1] == correct:
    print("CORRECT")
    score += 1
else:
    print("INCORRECT")

